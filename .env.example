# Application
APP_ENV=development
APP_DEBUG=false

# Database
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=todo_app
DB_USERNAME=root
DB_PASSWORD=

# JWT Access Token (short-lived, 15 min)
JWT_ACCESS_SECRET=change-this-to-a-random-64-char-string
JWT_ACCESS_EXPIRY=900

# JWT Remember-Me Token (long-lived, 30 days)
JWT_REMEMBER_SECRET=change-this-to-a-different-random-64-char-string
JWT_REMEMBER_EXPIRY=2592000

# Password Reset Token (1 hour)
PASSWORD_RESET_EXPIRY=3600

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000

# Rate Limiting
RATE_LIMIT_LOGIN=5
RATE_LIMIT_REGISTER=3
RATE_LIMIT_API=60
